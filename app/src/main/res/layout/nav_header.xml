<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <!-- android:layout_height="176dp" -> same as create new Navigation Drawer Activity in Android Studio (optional to follow) -->
    <!-- android:gravity="bottom" -> place everything bottom of this header -->
    <!-- android:theme="@style/ThemeOverlay.AppCompat.Dark" -> make the text white (just as we have the dark header)) -->
    <!-- contain header for our navigation drawer -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round" />
    <!-- android:src -> placeholder image -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Coding in Flow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <!-- android:text -> placeholder text (can use textSize att as well) -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info@codminginflow.com" />

</LinearLayout>